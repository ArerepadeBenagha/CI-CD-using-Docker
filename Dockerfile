rm -rf elite_solutions
mkdir elite_solutions
cd elite_solutions
cp /var/lib/jenkins/workspace/elite-solutions_package/target/LoginWebApp-1.war .
###############---------------------------------------******************************----------------------------------->>>>>>>>>>>>>>>>>>>>>##################
###############---------------------------------------******************************----------------------------------->>>>>>>>>>>>>>>>>>>>>##################
touch Dockerfile
cat <<EOT>> Dockerfile
FROM tomcat:latest
LABEL MAINTAINER="Louis Benagha"
ADD LoginWebApp-1.war /usr/local/tomcat/webapps
CMD ["catalina.sh", "run"]
EXPOSE 3030
EOT
###############---------------------------------------******************************----------------------------------->>>>>>>>>>>>>>>>>>>>>##################
#---%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%------#

sudo docker build -t lbenagha/elite:$BUILD_NUMBER .
sudo docker run -itd -P lbenagha/elite:$BUILD_NUMBER /bin/bash
